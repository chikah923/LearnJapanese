{% extends('layouts/auth_default') %}

{% block title %}{{ category_lang }}の練習問題{% endblock %}

{% block content %}
<h4>
{{ category_lang }}の練習問題
<br><br>

<form method="post" action="/questions/start">
{{ csrf_field() }}
<input type="hidden" name="category" value="{{ category }}">
<p>問題数の設定<br>
<br>
<input type="radio" name="amount" value="1">10問
<input type="radio" name="amount" value="2">20問
<input type="radio" name="amount" value="3">30問
</p>
</h4>
<br>
<p><input type="submit" value="設定を保存して問題を開始" class="btn btn-info"></p>
</form>

{% endblock %}
